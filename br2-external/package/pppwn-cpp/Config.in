config BR2_PACKAGE_PPPWN_CPP
	bool "pppwn-cpp"
	depends on BR2_TOOLCHAIN_HAS_THREADS
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_TOOLCHAIN_GCC_AT_LEAST_7
	select BR2_PACKAGE_HOST_CMAKE
	select BR2_PACKAGE_LIBPCAP
	help
	  PPPwn C++ implementation for PS4 exploit execution.
	  
	  This package provides the PPPwn exploit binary compiled from
	  the C++ implementation. It includes network packet manipulation
	  capabilities for PlayStation 4 exploit execution.
	  
	  https://github.com/xfangfang/PPPwn_cpp

if BR2_PACKAGE_PPPWN_CPP

config BR2_PACKAGE_PPPWN_CPP_CLI
	bool "Build CLI tool"
	default y
	help
	  Build the command line interface tool for PPPwn.
	  This is the main executable for running the exploit.

endif

comment "pppwn-cpp needs a toolchain w/ threads, C++, gcc >= 7"
	depends on !BR2_TOOLCHAIN_HAS_THREADS || !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_GCC_AT_LEAST_7